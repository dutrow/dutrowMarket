<configuration xmlns="urn:hornetq"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="urn:hornetq /schema/hornetq-configuration.xsd">

    <persistence-enabled>false</persistence-enabled>
    <journal-directory>target/hornetq/journal</journal-directory>
    <paging-directory>target/hornetq/paging</paging-directory>
    <bindings-directory>target/hornetq/bindings</bindings-directory>
    <large-messages-directory>target/hornetq/large-messages</large-messages-directory>

    <connectors>
        <connector name="netty-connector">
            <factory-class>org.hornetq.core.remoting.impl.netty.NettyConnectorFactory</factory-class>         
            <param key="host" value="${hornetq.remoting.netty.host}"/>
            <param key="port" value="${hornetq.remoting.netty.port}"/>
        </connector>
    </connectors>
   
    <acceptors>
        <acceptor name="netty-acceptor">
            <factory-class>org.hornetq.core.remoting.impl.netty.NettyAcceptorFactory</factory-class>
            <param key="host" value="${hornetq.remoting.netty.host}"/>
            <param key="port" value="${hornetq.remoting.netty.port}"/>
        </acceptor>
    </acceptors>


    <!-- Other config -->

    <security-settings>
        <!--security for example queue-->
        <security-setting match="#">
            <permission type="consume" roles="esales-sys"/>
            <permission type="send" roles="esales-sys"/>
            <permission type="createDurableQueue" roles="esales-sys"/>
            <permission type="deleteDurableQueue" roles="esales-sys"/>
            <permission type="createNonDurableQueue" roles="esales-sys"/>
            <permission type="deleteNonDurableQueue" roles="esales-sys"/>
        </security-setting>

        <security-setting match="jms.topic.jmsNotifier-topic1">
            <permission type="consume" roles="esales-sys"/>
            <permission type="send" roles="esales-sys"/>
            <permission type="createNonDurableQueue" roles="esales-sys"/>
        </security-setting>
        
       <security-setting match="jms.queue.hornetq.management">
          <permission type="manage" roles="esales-admin" />
       </security-setting>    
   </security-settings>


</configuration>
